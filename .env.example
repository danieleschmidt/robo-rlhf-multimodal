# ============================================================================
# Robo-RLHF-Multimodal Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env files to version control

# ============================================================================
# Core Configuration
# ============================================================================

# Project root directory (auto-detected if not set)
PROJECT_ROOT=

# Environment: development, testing, production  
ENVIRONMENT=development

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Random seed for reproducibility
RANDOM_SEED=42

# ============================================================================
# Training Configuration
# ============================================================================

# Device configuration
CUDA_VISIBLE_DEVICES=0
DEVICE=cuda

# Training data directory
DATA_DIR=./data

# Model checkpoints directory  
CHECKPOINT_DIR=./checkpoints

# Experiment logs directory
LOG_DIR=./logs

# Number of training epochs
NUM_EPOCHS=100

# Batch size for training
BATCH_SIZE=32

# Learning rate
LEARNING_RATE=3e-4

# ============================================================================
# Simulation Environments
# ============================================================================

# MuJoCo configuration
MUJOCO_KEY_PATH=
MUJOCO_GL=egl

# Isaac Sim configuration
ISAAC_SIM_PATH=/opt/nvidia/omniverse/isaac-sim
ISAAC_SIM_VERSION=2023.1.1

# Display configuration for headless rendering
DISPLAY=:1
XVFB_RESOLUTION=1920x1080x24

# ============================================================================
# Real Robot Configuration
# ============================================================================

# ROS2 configuration
ROS_DOMAIN_ID=0
RMW_IMPLEMENTATION=rmw_cyclonedx_cpp

# Robot IP addresses
ROBOT_IP=192.168.1.100
CAMERA_IP=192.168.1.101

# Safety limits
MAX_JOINT_VELOCITY=1.0
MAX_CARTESIAN_VELOCITY=0.5
EMERGENCY_STOP_TIMEOUT=1.0

# ============================================================================
# Preference Collection
# ============================================================================

# Web server configuration
PREFERENCE_SERVER_HOST=0.0.0.0
PREFERENCE_SERVER_PORT=8080

# Database configuration (for storing preferences)
DATABASE_URL=sqlite:///./preferences.db

# Authentication (if needed)
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Number of annotators per preference pair
MIN_ANNOTATORS_PER_PAIR=3

# Agreement threshold for preference pairs
AGREEMENT_THRESHOLD=0.7

# ============================================================================
# Model Configuration
# ============================================================================

# Vision encoder configuration
VISION_ENCODER=clip_vit_b32
VISION_HIDDEN_DIM=512

# Proprioception encoder configuration  
PROPRIOCEPTION_DIM=7
PROPRIOCEPTION_HIDDEN_DIM=256

# Policy network configuration
POLICY_HIDDEN_DIM=512
ACTION_DIM=7

# Reward model configuration
REWARD_MODEL_ENSEMBLE_SIZE=3
REWARD_MODEL_HIDDEN_DIM=256

# ============================================================================
# External Services
# ============================================================================

# Weights & Biases (optional)
WANDB_API_KEY=
WANDB_PROJECT=robo-rlhf-multimodal
WANDB_ENTITY=

# Hugging Face (for model downloading)
HF_TOKEN=

# OpenAI (if using GPT for analysis)
OPENAI_API_KEY=

# ============================================================================
# Development & Testing
# ============================================================================

# Test configuration
TEST_DATA_DIR=./test_data
PYTEST_TIMEOUT=300

# Coverage reporting
COVERAGE_MIN_PERCENTAGE=80

# Pre-commit hooks
SKIP_PRE_COMMIT=false

# Debug configuration
DEBUG=false
PROFILE=false

# ============================================================================
# Deployment & Production
# ============================================================================

# Container configuration
CONTAINER_REGISTRY=
IMAGE_TAG=latest

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Health checks
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# Scaling configuration
NUM_WORKERS=4
MAX_CONCURRENT_REQUESTS=100

# ============================================================================
# Security
# ============================================================================

# SSL/TLS configuration (for production)
SSL_CERT_PATH=
SSL_KEY_PATH=

# CORS configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate limiting
RATE_LIMIT_PER_HOUR=1000

# ============================================================================
# Cloud Configuration (if using cloud resources)
# ============================================================================

# AWS configuration
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-west-2

# Google Cloud configuration  
GOOGLE_APPLICATION_CREDENTIALS=

# Azure configuration
AZURE_SUBSCRIPTION_ID=
AZURE_RESOURCE_GROUP=

# ============================================================================
# Backup & Storage
# ============================================================================

# S3-compatible storage for data/model backups
S3_ENDPOINT=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_BUCKET=robo-rlhf-backups

# Local backup configuration
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=30

# ============================================================================
# Experimental Features
# ============================================================================

# Enable experimental features (use with caution)
ENABLE_EXPERIMENTAL_FEATURES=false

# Feature flags
ENABLE_DISTRIBUTED_TRAINING=false
ENABLE_MODEL_COMPRESSION=false
ENABLE_UNCERTAINTY_QUANTIFICATION=false

# Advanced training techniques
ENABLE_GRADIENT_CLIPPING=true
ENABLE_LEARNING_RATE_SCHEDULING=true
ENABLE_EARLY_STOPPING=true